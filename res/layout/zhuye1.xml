<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff0f0f0">
            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="180dp">

                <android.support.v4.view.ViewPager
                        android:id="@+id/vp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="25dip"
                        android:layout_gravity="bottom"
                        android:background="#33000000"
                        android:gravity="center"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:gravity="center">

                        <View
                                android:id="@+id/v_dot0"
                                style="@style/dot_style"
                                android:background="@drawable/dot_focused"/>

                        <View
                                android:id="@+id/v_dot1"
                                style="@style/dot_style"/>

                        <View
                                android:id="@+id/v_dot2"
                                style="@style/dot_style"/>

                        <View
                                android:id="@+id/v_dot3"
                                style="@style/dot_style"/>

                        <View
                                android:id="@+id/v_dot4"
                                style="@style/dot_style"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="220dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    >

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:gravity="center" android:id="@+id/layout_syd">

                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                               android:layout_marginLeft="15.0dip" android:src="@drawable/main_location"
                               android:layout_centerVertical="true"
                               android:id="@+id/imageiew4"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical" android:layout_weight="2.28"
                              android:paddingLeft="5dp" android:text="生源地" 
                              android:textColor="#000000"
                              android:id="@+id/textView5"/>
                    <TextView
                            android:id="@+id/textview1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="不限"
                            android:textColor="#000000">
                    </TextView>
                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="10dp"
                            android:src="@drawable/next_icon"
                            android:id="@+id/imageView11" android:longClickable="false"/>

                </LinearLayout>

                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="#DEDEDE"/>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp" android:layout_weight="0.25" android:gravity="center"
                        android:id="@+id/layout_wenli">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15.0dip" android:src="@drawable/main_directions" android:layout_centerVertical="true"
                               android:id="@+id/imageView4"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2.28"
                            android:paddingLeft="5dp"
                              android:textColor="#000000"
                            android:text="文理">
                    </TextView>

                    <TextView
                            android:text="不限"
                              android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2.52"
                            android:gravity="right"
                            android:id="@+id/textview_wenli">
                    </TextView>
                    <ImageView android:layout_width="30dp" android:layout_height="10dp"
                               android:src="@drawable/next_icon" android:id="@+id/imageView12"
                               android:longClickable="false"/>

                </LinearLayout>
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="#DEDEDE"/>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp" android:gravity="center" android:id="@+id/layout_fenshu">

                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                               android:layout_marginLeft="15.0dip" android:src="@drawable/main_score"
                               android:layout_centerVertical="true"
                               android:layout_gravity="center_vertical"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical" android:layout_weight="2.28"
                                android:textColor="#000000"
                              android:paddingLeft="5dp" android:text="分数" android:id="@+id/textView7"/>
                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="4"
                            android:id="@+id/ed_fenshu"
                            android:hint="输入分数"
                            android:visibility="gone"
                            android:textColor="@color/black" android:gravity="center" >
                    </EditText>
                    <ImageView android:layout_width="30dp" android:layout_height="10dp"
                               android:src="@drawable/next_icon" android:id="@+id/imageView13"
                               android:longClickable="false"/>

                </LinearLayout>
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="#DEDEDE"/>
            </LinearLayout>

            <Button
                    android:id="@+id/bt_tijiao"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="180dp"
                    android:background="@drawable/drawable_mainbtn_selector"

                    android:text="@string/btn_goto_recommended"/>


        </FrameLayout>
        <ListView
                android:id="@+id/left_drawer"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="#FFFFFF"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"/>
    </android.support.v4.widget.DrawerLayout>


</LinearLayout>
