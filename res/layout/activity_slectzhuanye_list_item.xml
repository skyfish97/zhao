<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="20dp">
    <RelativeLayout android:id="@id/relative_top" android:paddingLeft="8.0dip" android:paddingRight="8.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
        <TextView android:textSize="19.0sp" android:id="@+id/tv_specialname" android:paddingBottom="3.0dip"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginRight="5.0dip" android:text="哲学" android:layout_centerVertical="true"
                  android:textColor="@color/skyblue"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="10dp">
        <RelativeLayout android:id="@id/relative_bottom" android:paddingLeft="8.0dip" android:paddingRight="8.0dip" android:paddingBottom="16.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
                >
            <TextView android:textSize="14dp" android:textColor="@color/middlegray" android:id="@+id/tv_taddress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="专业类别：" />
            <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_zytype" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="哲学类" android:layout_toRightOf="@id/tv_taddress"
                    />
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">
            <TextView android:textSize="14dp" android:textColor="@color/middlegray" android:id="@+id/tv_tkenengxing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="开设院校数量：" />
            <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_yxcount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100" android:layout_toRightOf="@id/tv_tkenengxing" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/relative_second" android:paddingLeft="8.0dip" android:paddingBottom="16.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14dp" android:textColor="@color/middlegray" android:id="@+id/tv_tfengshu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="报考热度排名：" />
            <TextView android:textSize="14dp" android:id="@+id/textView8"
                      android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="全国>> "
                      android:layout_alignParentTop="true" android:layout_toEndOf="@+id/tv_tfengshu"
                      android:textColor="@color/black"/>
            <TextView android:textSize="14dp"
                      android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100"
                      android:layout_alignParentTop="true" android:layout_alignParentEnd="false"
                      android:layout_toEndOf="@+id/textView8" android:id="@+id/tv_ranking"
                      android:textColor="@color/black"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">
            <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_scLevel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="哲学>>"
                      android:textIsSelectable="false"/>
            <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/tv_rankingType" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="200"
                      android:layout_toEndOf="@+id/tv_scLevel"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:background="@color/middlegray" android:layout_width="fill_parent" android:layout_height="0.5dip" />
</LinearLayout>